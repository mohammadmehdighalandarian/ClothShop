@page
@model ClothShop.Web.Pages.Admin.Product.IndexModel
@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست محصولات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست محصولات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن محصول جدید</a>

                </div>

                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان محصول</th>
                            <th>گروه اصلی</th>
                            <th>گروه فرعی</th>
                            <th>وضعیت</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    <img src="/Product/thumb/@item.ProductImageName" class="thumbnail" />
                                </td>
                                <td>
                                    @item.ProductTitle
                                </td>
                                <td>
                                    @item.MainGroup
                                </td>
                                <td>
                                    @item.SubGroup
                                </td>
                                <td>
                                    @item.IsActive
                                </td>
                                <td>
                                    <a href="/Admin/Product/Product/@item.ProductId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                    <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-warning btn-sm">
                                        حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
