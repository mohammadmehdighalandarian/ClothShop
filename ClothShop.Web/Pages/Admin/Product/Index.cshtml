@page
@model ClothShop.Web.Pages.Admin.Product.IndexModel
@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست محصولات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست محصولات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreateProduct" class="btn btn-outline btn-success">افزودن محصول جدید</a>

                </div>

                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان محصول</th>
                            <th>گروه اصلی</th>
                            <th>گروه فرعی</th>
                            <th>وضعیت</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    <img src="/Product/thumb/@item.ProductImageName" class="thumbnail" />
                                </td>
                                <td>
                                    @item.ProductTitle
                                </td>
                                <td>
                                    @item.MainGroup
                                </td>
                                <td>
                                    @item.SubGroup
                                </td>
                                <td>
                                    @(item.IsActive == true ? "فعال" : "غیرفعال")
                                </td>
                                <td>
                                    <form method="post">


                                        <a href="/Admin/Product/EditProduct/@item.ProductId" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                        @{
                                            if (item.IsActive == true)
                                            {
                                                <a href="/Admin/Product/DeActiveProduct/@item.ProductId" class="btn btn-danger btn-sm">
                                                    غیرفعال
                                                </a>
                                            }
                                            else
                                            {
                                                <input asp-page-handler="Active" type="hidden" name="id" value="@item.ProductId" />
                                                <button asp-page-handler="Active" type="submit" class="btn btn-success btn-sm">فعال سازی</button>
                                            }
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
