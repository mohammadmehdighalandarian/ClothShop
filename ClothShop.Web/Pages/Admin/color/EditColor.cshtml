@page "{id}"
@using ClothShop.DataLayer.Entities.Permission
@model ClothShop.Web.Pages.Admin.color.EditColorModel
@{
    ViewData["Title"] = "ویرایش رنگ";
    List<Permission> permissions = ViewData["Permissions"] as List<Permission>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش رنگ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش رنگ "@Model.color.name"
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <input type="hidden" asp-for="color.id"/>
                    <input type="hidden" asp-for="color.isActive"/>
                    <div class="form-group">
                        <label>عنوان رنگ</label>
                        <input type="text" asp-for="color.name" class="form-control">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>

