@page
@model ClothShop.Web.Pages.Admin.Size.IndexModel
@{
    ViewData["Title"] = "لیست سایز ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست سایز ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست سایز های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="Add" class="btn btn-outline btn-success">افزودن سایز  جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان سایز </th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ItemList)
                                {
                                    <form method="post">
                                    <tr>
                                        <td>@item.SizeNO</td>
                                        <td>
                                            <a href="/Admin/Size/Edit/@item.SizeId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                                @if (item.IsActive)
                                                {

                                                <button asp-page-handler="DeActive" type="submit" class="btn btn-danger btn-sm" value="@item.SizeId" name="id">
                                                    غیر فعال سازی
                                                </button>

                                                }
                                                else
                                                {

                                                <button asp-page-handler="Active" type="submit" class="btn btn-success btn-sm" value="@item.SizeId" name="id">
                                                    فعال سازی
                                                </button>

                                                }

                                        </td>
                                    </tr>
                                    </form>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>