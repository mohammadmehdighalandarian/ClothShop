@page "{id}"
@using ClothShop.DataLayer.Entities.Permission
@model ClothShop.Web.Pages.Admin.Size.EditModel
@{
    ViewData["Title"] = "ویرایش سایز ";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش سایز </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش سایز  "@Model.Size.SizeNO"
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <input type="hidden" asp-for="Size.SizeId" />
                    <input type="hidden" asp-for="Size.IsActive" />
                    <div class="form-group">
                        <label>عنوان سایز </label>
                        <input type="text" asp-for="Size.SizeNO" class="form-control">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>

